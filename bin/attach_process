#!/bin/bash

# 使用 ps aux 列出所有进程，并通过 fzf 进行选择
selected=$(ps aux | fzf --layout=reverse --height=40% --border --prompt="Select a process to attach: ")

# 如果用户选择了一个进程，则提取该进程的 PID
if [[ -n "$selected" ]]; then
    # 提取 PID（第二列）
    pid=$(echo $selected | awk '{print $2}')

    # 将该进程附加到当前终端
    reptyr -T $pid
else
    echo "No process selected."
fi

